<h1>Burger!</h1>
<div class="center-align">
  <img {width:20px;height:20px;vertical-align:middle} src="https://img.icons8.com/officel/80/000000/hamburger.png" />
</div>
<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2>Waiting to be Eat</h2>
        {{#each burgers}} {{#unless this.devoured}}
        <div>
          <form action="/burgers/{{this.id}}" method="POST">
            <div class='burgerAvailable'>
              {{this.burger_name}}
              <button type="submit" class="devour">DEVOUR IT</button>
            </div>
          </form>
        </div>
        {{/unless}} {{/each}}
      </div>
      <div class="col s6">
        <h2>Devoured</h2>
        {{#each burgers}} {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}} {{/each}}
      </div>
    </div>
  </div>
</main>
<h2>Choose a burger you want to eat!</h2>
<div class="row">
  <form action="/burgers" method="POST">
    <input type="text" id="name" name="burger_name" placeholder="ADD A NEW BURGER!">
    <button type="submit" class="addBurgerButton">Add</button>
  </form>
</div>